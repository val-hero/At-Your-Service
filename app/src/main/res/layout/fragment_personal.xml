<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_black"
    tools:context="com.atyourservice.profile.ui.PersonalFragment">

    <TextView
        android:id="@+id/text_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="First name"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_background_10dp"
        android:drawableStart="@drawable/ic_badge"
        android:drawablePadding="@dimen/edit_text_drawable_padding"
        android:fontFamily="@font/kadwa_regular"
        android:hint=""
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@id/text_first_name"
        app:layout_constraintTop_toBottomOf="@+id/text_first_name"/>

    <TextView
        android:id="@+id/text_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="Last Name"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@+id/text_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name" />

    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_background_10dp"
        android:drawableStart="@drawable/ic_badge"
        android:drawablePadding="@dimen/edit_text_drawable_padding"
        android:fontFamily="@font/kadwa_regular"
        android:hint=""
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@id/text_last_name"
        app:layout_constraintTop_toBottomOf="@+id/text_last_name"
        />

    <TextView
        android:id="@+id/text_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="Country"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@+id/text_last_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_last_name" />

    <EditText
        android:id="@+id/edit_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_background_10dp"
        android:drawableStart="@drawable/ic_badge"
        android:drawablePadding="@dimen/edit_text_drawable_padding"
        android:fontFamily="@font/kadwa_regular"
        android:hint="select country"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@id/text_country"
        app:layout_constraintTop_toBottomOf="@+id/text_country" />

    <TextView
        android:id="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="City"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@+id/text_country"
        app:layout_constraintTop_toBottomOf="@+id/edit_country" />

    <EditText
        android:id="@+id/edit_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_background_10dp"
        android:drawableStart="@drawable/ic_badge"
        android:drawablePadding="@dimen/edit_text_drawable_padding"
        android:fontFamily="@font/kadwa_regular"
        android:hint="select city"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/regular_text"
        app:layout_constraintStart_toStartOf="@id/text_city"
        app:layout_constraintTop_toBottomOf="@+id/text_city" />

</androidx.constraintlayout.widget.ConstraintLayout>
