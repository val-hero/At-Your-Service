<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spicialist_card_background"
    android:backgroundTint="#2B2B2C">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imUserPhoto"
        android:layout_width="@dimen/user_photo_size"
        android:layout_height="@dimen/user_photo_size"
        android:layout_margin="10dp"
        android:foreground="@drawable/circle"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/kadwa_font"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imUserPhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        tools:text="John Doe"/>

    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/kadwa_font"
        android:textColor="@color/white"
        android:textSize="@dimen/additional_text"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imUserPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        tools:text="Android Developer"/>

    <TextView
        android:id="@+id/tvCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/kadwa_font"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$ 50 / hour" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:drawablePadding="2dp"
        android:fontFamily="@font/kadwa_font"
        android:textColor="@color/white"
        android:textSize="@dimen/secondary_text"
        app:drawableStartCompat="@drawable/star_icon"
        app:layout_constraintBaseline_toBaselineOf="@id/tvJob"
        app:layout_constraintEnd_toStartOf="@+id/tvReviews"
        tools:text="4.95"/>

    <TextView
        android:id="@+id/tvReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textSize="@dimen/additional_text"
        android:textColor="@color/light_gray"
        app:layout_constraintBaseline_toBaselineOf="@id/tvRating"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="(111)"/>
</androidx.constraintlayout.widget.ConstraintLayout>