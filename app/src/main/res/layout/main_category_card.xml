<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/light_black">

    <ImageButton
        android:id="@+id/image_category"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_category"
        android:src="@drawable/category_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:textSize="@dimen/secondary_text"
        android:fontFamily="@font/kadwa_font"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/image_category"
        app:layout_constraintStart_toStartOf="@+id/image_category"
        app:layout_constraintTop_toBottomOf="@+id/image_category" />
</androidx.constraintlayout.widget.ConstraintLayout>