<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    tools:context="com.atyourservice.AuthorizationFragment">

    <ImageView
        android:id="@+id/logo_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="18dp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_placeholder" />

    <Button
        android:id="@+id/sign_in_with_google_button"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_google"
        android:fontFamily="@font/kadwa_regular"
        android:gravity="center|start"
        android:paddingLeft="0dp"
        android:text="Sign in with Google"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_placeholder" />

    <TextView
        android:id="@+id/or_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/kadwa_regular"
        android:gravity="center"
        android:text="or"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_with_google_button"
        app:layout_constraintStart_toStartOf="@+id/sign_in_with_google_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_with_google_button" />

    <TextView
        android:id="@+id/enter_with_your_account_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/kadwa_regular"
        android:gravity="center"
        android:text="enter with your account:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/or_textview"
        app:layout_constraintStart_toStartOf="@+id/or_textview"
        app:layout_constraintTop_toBottomOf="@+id/or_textview" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext_background"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="20dp"
        android:fontFamily="@font/kadwa_regular"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/for_editText"
        android:textColorHint="@color/for_editText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_with_your_account_textview" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext_background"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="20dp"
        android:fontFamily="@font/kadwa_regular"
        android:hint="Password"
        android:padding="20dp"
        android:textColor="@color/for_editText"
        android:textColorHint="@color/for_editText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_editText" />

    <TextView
        android:id="@+id/forgot_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/password_editText"
        app:layout_constraintTop_toBottomOf="@+id/password_editText" />

    <ImageView
        android:id="@+id/sign_in_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_login_button"
        app:layout_constraintEnd_toEndOf="@+id/password_editText"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_tv" />

    <TextView
        android:id="@+id/new_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="New user?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_tv"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_iv" />

    <TextView
        android:id="@+id/create_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kadwa_regular"
        android:text="@string/create_account"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/new_user_tv"
        app:layout_constraintTop_toBottomOf="@+id/new_user_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>