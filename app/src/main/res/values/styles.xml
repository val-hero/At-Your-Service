<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="header_title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:fontFamily">@font/kadwa_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/main_vertical_margin</item>
    </style>

    <style name="edit_text">
        <item name="android:fontFamily">@font/kadwa_regular</item>
        <item name="android:drawablePadding">@dimen/same_items_vertical_margin</item>
        <item name="android:paddingHorizontal">@dimen/same_items_vertical_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_marginTop">@dimen/same_items_vertical_margin</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="button_submit">
        <item name="android:textSize">@dimen/main_action_text</item>
        <item name="android:fontFamily">@font/kadwa_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_vertical_margin</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="button_sign_in">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kadwa_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="tabIndicatorColor">@color/peach</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabPaddingStart">1dp</item> <!-- Adjust this value as per your needs -->
        <item name="tabPaddingEnd">1dp</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>

    </style>




</resources>